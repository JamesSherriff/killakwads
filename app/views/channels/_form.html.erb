<%= form_for @channel do |f| %>
  <%= f.label :band %>
  <%= f.select :band_id, Band.all.collect { |b| [b.name, b.id]}, {}, {class: "form-control"} %>
  <br>
  <%= f.label :name %>
  <%= f.text_field :name, class: "form-control" %>
  <br>
  <%= f.label :frequency %>
  <%= f.text_field :frequency, class: "form-control" %>
  <br>
  <%= f.submit class: "btn btn-primary" %>
  <%= link_to "Cancel", channels_path, class: "btn btn-outline-primary" %>
<% end %>