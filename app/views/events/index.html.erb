<div id="events" class="mb-5">
  <% if @events.empty? %>
    <center><h2>There aren't any events currently running!</h2></center>
  <% else %>
    <div class="row">
      <% @events.each do |event| %>
      <div class="col-sm-6">
        <a href="<%= event_path(event) %>">
          <div class="card">
            <% if event.image.attached? %>
              <img src="<%= url_for(event.image) %>" class="card-img-top" alt="<%= event.name %>">
            <% end %>
            <div class="card-body">
              <h3 class="card-title"><%= event.name %></h3>
              <p class="card-text"><%= event.description %></p>
              <% if event.location && event.location != "" %>
                <p><strong>Location: </strong><%= event.location %></p>
              <% end %>
              <br>
              <% if event.registration_open? %>
                <%= link_to "Register", new_registration_path({event_id: event.id, user_id: current_user.id}), class: "btn btn-primary" %>
              <% end %>
              <%= link_to "View More", event_path(event), class: "btn btn-primary" %>
              <% if current_user.admin? %>
                <%= link_to "Edit", edit_event_path(event), class: "btn btn-warning" %>
                <%= link_to "Delete", event_path(event), method: :delete, class: "btn btn-danger" %>
              <% end %>
            </div>
          </div>
        </a>
      </div>
      <% end %>
    </div>
    <% end %>
  </div>
<% if user_signed_in? && current_user.admin? %>
<center><%= link_to "New Event", new_event_path, class: "btn btn-primary" %></center>
<% end %>